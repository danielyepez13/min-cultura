---
const news = [
  { title: 'Noticia 1', image: '/fondo2.jpg', description: 'Descripción de la noticia 1' },
  { title: 'Noticia 2', image: '/fondo2.jpg', description: 'Descripción de la noticia 2' },
  { title: 'Noticia 3', image: '/fondo2.jpg', description: 'Descripción de la noticia 3' },
  { title: 'Noticia 4', image: '/fondo2.jpg', description: 'Descripción de la noticia 4' },
  { title: 'Noticia 5', image: '/fondo2.jpg', description: 'Descripción de la noticia 5' },
  { title: 'Noticia 6', image: '/fondo2.jpg', description: 'Descripción de la noticia 6' },
]
---

<div class="col-span-10 grid grid-cols-3 gap-6">
  {news.map((item) => (
    <div class="bg-white shadow-md rounded-lg overflow-hidden mt-2">
      <img src={item.image} alt={item.title} class="w-full h-72 object-cover" />
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-2">{item.title}</h2>
        <p class="text-gray-700">{item.description}</p>
      </div>
    </div>
  ))}
</div>