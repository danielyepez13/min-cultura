  { title: 'Libro 3', image: '/fondo3.jpg', description: 'Descripci贸n de la libro 3' },
  { title: 'Libro 4', image: '/fondo3.jpg', description: 'Descripci贸n de la libro 4' },
]
---

<div class="my-16 w-full px-2">
  <div class="grid grid-cols-2 gap-4">
    {
      news.map((item, index) => (
        <div class="flex overflow-hidden rounded-lg bg-white shadow-md">
          <img id={`image-${index}`} src={item.image} alt={item.title} class="h-48 w-1/2 cursor-pointer object-cover" />
          <div class="w-1/2 p-6">
            <h2 class="mb-2 text-2xl font-bold">{item.title}</h2>
            <p class="text-gray-700">{item.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>

<div id="backdrop" class="fixed inset-0 hidden bg-black opacity-50"></div>

<script>
  window.addEventListener('DOMContentLoaded', (event) => {
    const images = document.querySelectorAll('img')
    const backdrop = document.getElementById('backdrop')
    images.forEach((img) => {
      img.addEventListener('click', (event) => {
        event.target.classList.toggle('expanded')
        backdrop.classList.toggle('hidden')
      })
    })
  })
</script>

<style>
  .expanded {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
    transition: all 0.5s ease-in-out;
    height: 80vh;
    width: auto;
    object-fit: contain;
  }
</style>
